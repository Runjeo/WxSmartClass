.swiper-tab {
    width: 100%;
    border-bottom: 2rpx solid #777777;
    text-align: center;
    line-height: 80rpx;
}

.swiper-tab-list {
    font-size: 30rpx;
    display: inline-block;
    width: 33%;
    color: #777777;
}

.on {
    color: #da7c0c;
    border-bottom: 5rpx solid #da7c0c;
}

.swiper-box {
    display: block;
    height: 100%;
    width: 100%;
    overflow: hidden;
}

.swiper-box view {
    text-align: center;
}

.text1 {
    font-size: 20px;
    color: #2e2c2c;
}

.text2 {
    font-size: 15px;
    color: #777272;
}

.class-box {
    width: 100%;
    height: 15%;
    display: flex;
    flex-flow: column;
    background-color: white;
    margin-top: 0;
    padding: 2% 0 0 0;
    border-bottom-width: 1px;
    border-bottom-style: solid;
    border-bottom-color: #dbd2d2;
}

.name {
    height: 40%;
    width: 70%;
    display: flex;
    flex-direction: column;
    background-color: white;
    margin-top: 0;
    padding: 0 0 0 0;
    text-align: center;
}

.inf_name {
    width: 70%;
    height: 25%;
    display: flex;
    flex-direction: column;
    background-color: white;
    margin-top: 0;
    padding: 0 0 0 0;
}